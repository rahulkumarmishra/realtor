    }


    ::-webkit-file-upload-button {
      display: none;
    }

    ::file-selector-button {
      display: none;
    }

    input[type="file"] {
      color: transparent;
    }

    .fe-24 {
      position: absolute;
      top: 292px;
      left: 232px;
